#!/usr/bin/env python
# PYTHON_ARGCOMPLETE_OK

import argparse
import argcomplete
from limnopapers import limnopapers as lp

parser = argparse.ArgumentParser()
parser.add_argument('--tweet', default = False,
                    action='store_true')
parser.add_argument('--interactive', default = False,
                    action='store_true')
parser.add_argument('--browser', default = False,
                    action='store_true')
argcomplete.autocomplete(parser)
args = parser.parse_args()

lp.limnotoots(tweet = args.tweet, interactive = args.interactive,
              browser = args.browser)
